    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "name": "Jest Tests",
            "request": "launch",
            "args": [
                "--config",
                "jest.config.js",
                "--runInBand",
                "--coverage",
                "false"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest",
            "outFiles": ["${workspaceRoot}/dist/"]
        }
    ]
}